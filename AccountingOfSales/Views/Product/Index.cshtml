@using PagedList.Mvc;
@using AccountingOfSales.Models;
@model PagedList.IPagedList<Product>

@{
    ViewBag.Title = "Продукты";
}

<h2>Продукты</h2>

<p>@Html.ActionLink("Создать продукт", "Create")</p>
<br />
@using (Html.BeginForm("Index", "Product", FormMethod.Get))
{
    <div class="form-inline">
        <label class="control-label">Наименование: </label>
        @Html.TextBox("name", "", htmlAttributes: new { @class = "form-control" })
        <input type="submit" value="Фильтр" class="btn btn-default" />
    </div>
}
<br />
<table class="table table-striped table-hover">
    <tr>
        @*<th>Фото</th>*@
        <th>Наименование</th>
        <th>Модель</th>
        <th>Тип</th>
        <th>Цвет</th>
        <th>Размер</th>
        <th>Количество</th>
        <th>Розничная цена</th>
        <th>Поставщик</th>
        <th>Дата создания</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>@item.Image.Name</td>*@
            <td>@item.Name</td>
            <td>@item.Model</td>
            <td>@item.TypeProduct.Name</td>
            <td>@item.Color</td>
            <td>@item.Size</td>
            <td>@item.Count</td>
            <td>@item.RetailPrice</td>
            <td>@item.Provider.Name</td>
            <td>@item.CreateDate</td>
            <td align="center">
                <a href="@Url.Action("Edit", "Product", new { id = item.Id })" title="Редактировать"><img src="~/Images/icons/edit.png" width="30"/></a>   
                <a href="@Url.Action("Delete", "Product", new { id = item.Id })" title="Удалить"><img src="~/Images/icons/delete.png" width="30" /></a>                        
            </td>
        </tr>
    }

</table>

<label class="control-label">Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount</label>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))