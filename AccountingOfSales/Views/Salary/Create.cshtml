@model AccountingOfSales.Models.Salary

@{
    ViewBag.Title = "Создание начисления";
}

<h2>Создание начисления</h2>

@using (Html.BeginForm("Create", "Salary", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("EndDate", DateTime.Now.ToShortDateString(), new { @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Начислить" class="btn btn-primary" />
                @Html.ActionLink("Отмена", "Create", "Salary", htmlAttributes: new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться на главную", "Index")
</div>

@section scripts {
    <script type="text/javascript">
        $('.datepicker').datepicker({
            format: "dd.mm.yyyy",
            language: "ru",
            autoclose: true,
            todayHighlight: true
        });

        $('.datepicker').removeAttr("data-val-date");

    </script>
}